# TeachAI 服务器环境配置示例

# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/teachai

# AI服务配置
AI_ENABLED=true
DASHSCOPE_API_KEY=your_api_key_here
QWEN_MODEL=qwen-plus
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TOP_P=0.8

# JWT配置
JWT_SECRET=your_jwt_secret_here_please_change_in_production

# 邀请码配置
INVITE_CODE=TEACHER2024

# PDF导出优化配置（macOS）
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false
PUPPETEER_CACHE_DIR=./node_modules/puppeteer/.local-chromium

# CORS配置
CORS_ORIGIN=http://localhost:3000,http://localhost:3002

# 日志配置
LOG_LEVEL=info

# 导出功能配置
EXPORT_TEMP_DIR=./temp
EXPORT_MAX_FILE_SIZE=50MB
