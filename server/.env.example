# Server Environment Variables Example
# Copy this file to .env and fill in your values
# SECURITY WARNING: Never commit real API keys or secrets to version control

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/teachai

# JWT Configuration (REQUIRED - Generate with: openssl rand -base64 32)
JWT_SECRET=your_secure_jwt_secret_minimum_32_characters_here

# AI Service Configuration
DASHSCOPE_API_KEY=sk-your_dashscope_api_key_here
AI_ENABLED=true
QWEN_MODEL=qwen-plus
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Invite Code Configuration
INVITE_CODE=your_invite_code_here

# RAG Service Configuration
RAG_SERVICE_URL=https://your-rag-service.com
RAG_SERVICE_TOKEN=hf_your_huggingface_token_here

# Pinecone Configuration (Optional)
PINECONE_API_KEY=pcsk_your_pinecone_api_key_here
PINECONE_INDEX_NAME=teachai

# ChromaDB Configuration
CHROMA_CLOUD_ENABLED=false
CHROMADB_API_KEY=your_chromadb_api_key_here
CHROMADB_TENANT=your_tenant_id
CHROMADB_DATABASE=teachai
CHROMADB_COLLECTION=teachai_main

# CORS Configuration
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# Cookie Configuration (Production)
# Domain for session cookies (e.g., .yourdomain.com for subdomain sharing)
COOKIE_DOMAIN=.yourdomain.com

# Development override (uncomment for local development)
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
# COOKIE_DOMAIN=localhost