{
  "name": "teachai",
  "version": "2.0.0",
  "description": "基于 Next.js 和 Node.js 的全栈 AI 教案生成应用",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:web\"",
    "dev:web": "cd web && pnpm dev",
    "dev:server": "cd server && pnpm run dev",
    "build": "pnpm run build:web && pnpm run build:server",
    "build:web": "cd web && pnpm build",
    "build:server": "cd server && pnpm run build",
    "start": "concurrently \"pnpm run start:server\" \"pnpm run start:web\"",
    "start:web": "cd web && pnpm start",
    "start:server": "cd server && pnpm start",
    "install:all": "pnpm install && cd web && pnpm install && cd ../server && pnpm install",
    "clean": "rm -rf web/node_modules web/.next server/node_modules",
    "lint": "cd web && pnpm lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:server": "cd server && pnpm test",
    "test:web": "cd web && pnpm test",
    "test:all": "pnpm run test:server && pnpm run test:web",
    "format": "npx prettier --write .",
    "chroma:start": "./run-chroma-python.sh",
    "chroma:stop": "pkill -f \"python3.*chromadb\" || pkill -f \"uvicorn\" || true",
    "chroma:start:docker": "docker run --rm -d --name chromadb -p 8000:8000 -v $(pwd)/chroma_db:/chroma/chroma chromadb/chroma:latest",
    "chroma:stop:docker": "docker stop chromadb || true",
    "chroma:start:centos": "./start-chromadb-docker.sh",
    "chroma:stop:centos": "docker stop chromadb-teachai || true",
    "rag:load": "cd server && node rag/scripts/centos-rag-loader.js",
    "rag:progress": "cd server && node rag/scripts/monitor-loading-progress.js show",
    "rag:progress:watch": "cd server && node rag/scripts/monitor-loading-progress.js watch",
    "rag:status": "cd server && node rag/scripts/check-collection.js",
    "rag:reset": "cd server && node rag/scripts/reset-chromadb.js",
    "test:rag-accuracy": "cd server && node rag/scripts/run-accuracy-test.js",
    "test:rag-accuracy:quick": "cd server && node rag/scripts/run-accuracy-test.js --mode=quick",
    "test:rag-accuracy:biology": "cd server && node rag/scripts/run-accuracy-test.js --subject=biology",
    "test:rag-accuracy:math": "cd server && node rag/scripts/run-accuracy-test.js --subject=math",
    "test:rag-accuracy:chinese": "cd server && node rag/scripts/run-accuracy-test.js --subject=chinese",
    "test:rag-accuracy:english": "cd server && node rag/scripts/run-accuracy-test.js --subject=english",
    "test:rag-ci": "cd server && node rag/scripts/ci-rag-test.js",
    "dev:full": "concurrently \"pnpm run chroma:start\" \"pnpm run dev:server\" \"pnpm run dev:web\"",
    "start:full": "concurrently \"pnpm run chroma:start\" \"pnpm run start:server\" \"pnpm run start:web\"",
    "setup:rag": "pnpm run chroma:start && sleep 5 && pnpm run rag:load",
    "deploy:zeabur": "bash deploy-zeabur.sh",
    "start:zeabur": "concurrently \"pnpm run start:server\" \"pnpm run start:web\"",
    "build:zeabur": "pnpm run install:all && pnpm run build",
    "postinstall": "echo 'Installation completed. Run pnpm start for production or pnpm dev for development.'",
    "health-check": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "education",
    "lesson-plan",
    "nextjs",
    "nodejs",
    "typescript",
    "tailwindcss"
  ],
  "author": "TeachAI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/teachai.git"
  },
  "dependencies": {
    "next": "^15.3.5"
  }
}
