# Next.js Environment Variables Example
# Copy this file to .env.local and fill in your values
# SECURITY WARNING: Never commit real secrets to version control

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# NextAuth Configuration (REQUIRED - Generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_secure_nextauth_secret_minimum_32_characters_here
NEXTAUTH_URL=http://localhost:3000

# Auth.js v5 environment variables (alternative names)
# AUTH_SECRET=your_secure_auth_secret_minimum_32_characters_here
# AUTH_URL=http://localhost:3000
# AUTH_TRUST_HOST=true

# Production Configuration
# NEXT_PUBLIC_API_URL=https://yourdomain.com:3001/api
# NEXTAUTH_URL=https://yourdomain.com
# AUTH_TRUST_HOST=true

# Development Configuration (uncomment for local development)
# NEXT_PUBLIC_API_URL=http://localhost:3001/api
# NEXTAUTH_URL=http://localhost:3000