# TeachAI Docker Environment Configuration
# Copy this to .env and configure your values

# ==============================================
# REQUIRED CONFIGURATION
# ==============================================

# AI Service Configuration
DASHSCOPE_API_KEY=your_dashscope_api_key_here
QWEN_MODEL=qwen-plus
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Security
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_change_this_in_production

# Database Authentication
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password_here

# ==============================================
# OPTIONAL CONFIGURATION
# ==============================================

# Data Storage Path (adjust for your server)
DATA_PATH=./docker-data
RAG_DATA_PATH=./server/rag_data

# Resource Optimization
EMBEDDING_PROFILE=balanced
# Options: ultra-lite (23MB), balanced (118MB), quality (278MB)

# ChromaDB Cloud Fallback (optional)
CHROMA_CLOUD_ENABLED=false
CHROMADB_API_KEY=your_chromadb_api_key
CHROMADB_TENANT=your_tenant_id
CHROMADB_DATABASE=teachai

# Application Database User (optional, auto-created)
TEACHAI_DB_USER=teachai
TEACHAI_DB_PASSWORD=your_app_db_password

# ==============================================
# ADVANCED CONFIGURATION
# ==============================================

# Node.js Memory Limits (adjust for your 8GB RAM constraint)
NODE_OPTIONS=--max-old-space-size=4096

# Network Configuration
WEB_PORT=3000
API_PORT=3001

# Logging Level
LOG_LEVEL=info
# Options: error, warn, info, debug

# Enable Development Features (set to false in production)
ENABLE_DEBUG_LOGS=false
ENABLE_API_DOCS=false

# Performance Tuning
UV_THREADPOOL_SIZE=4
MONGODB_MAX_POOL_SIZE=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP_HOUR=2

# Monitoring and Alerts (optional)
ALERT_WEBHOOK=https://your-webhook-url.com/alerts
ALERT_EMAIL=admin@yourdomain.com

# ==============================================
# CentOS SERVER SPECIFIC
# ==============================================

# Timezone
TZ=Asia/Shanghai

# System User ID (match your host user)
USER_ID=1000
GROUP_ID=1000

# Firewall-friendly ports (if using non-standard ports)
# EXTERNAL_WEB_PORT=8080
# EXTERNAL_API_PORT=8081